<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.LoginActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_x2"
            android:layout_marginEnd="@dimen/margin_x2"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
                android:id="@+id/txt_login_hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hello_text"
                android:layout_gravity="center"/>

        <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_enter"
                android:background="@color/colorVk"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/margin_x2"/>

        <com.github.rahatarmanahmed.cpv.CircularProgressView
                android:id="@+id/cpv_login"
                android:layout_width="@dimen/progress_bar_size"
                android:layout_height="@dimen/progress_bar_size"
                android:layout_marginTop="@dimen/margin_x1"
                app:cpv_indeterminate="true"
                android:layout_gravity="center"
                app:cpv_animAutostart="true"
                android:visibility="gone"/>

    </LinearLayout>


</FrameLayout>